{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "pretty": true,
    "outDir": "./dist/cjs"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "moduleResolution": "node",
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "rootDir": "./src"
}
